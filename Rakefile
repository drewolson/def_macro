# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/def_macro.rb'

Hoe.new('def_macro', DefMacro::VERSION) do |p|
  p.rubyforge_name = 'def_macro'
  p.developer('Drew Olson', 'drew@drewolson.org')
  p.extra_deps << ['ruby2ruby', '>= 1.1.9']
  p.extra_deps << ['need', '>= 1.1.0']
  p.remote_rdoc_dir = ''
end

